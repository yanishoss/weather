{
  "name": "weather",
  "version": "1.0.0-alpha",
  "description": "A simple CLI to see the weather while you're in your terminal.",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "format": "npm run lint && npm run prettify",
    "lint": "npx tslint --fix src/**/*.ts",
    "prettify": "npx prettier **/*.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanishoss/weather.git"
  },
  "keywords": [
    "weather",
    "cli",
    "terminal",
    "rain",
    "summer",
    "spring",
    "hot",
    "cold"
  ],
  "author": "Yanis HEDJEM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yanishoss/weather/issues"
  },
  "homepage": "https://github.com/yanishoss/weather#readme",
  "devDependencies": {
    "@types/cosmiconfig": "5.0.2",
    "@types/jest": "23.0.2",
    "@types/node": "10.3.2",
    "@types/raven": "2.5.1",
    "husky": "1.0.0-rc.8",
    "jest": "23.1.0",
    "lint-staged": "7.2.0",
    "npx": "10.2.0",
    "prettier": "1.13.5",
    "raven": "^2.6.2",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npx tsc --noEmit",
      "npx tslint --fix",
      "npx prettier",
      "git add"
    ]
  },
  "dependencies": {
    "cosmiconfig": "5.0.5"
  }
}
